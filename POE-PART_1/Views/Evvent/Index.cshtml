@model IEnumerable<POE_PART_1.Models.Evvent>
@{
    ViewData["Title"] = "Events";
}

<div class="container mt-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Events</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Event
        </a>
    </div>

    <!-- Alert Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filter Form -->
    <form method="get" class="mb-4">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Event Type</label>
                <select name="searchType" class="form-select">
                    <option value="">-- All Types --</option>
                    @foreach (var type in (List<EvventType>)ViewData["EventTypes"])
                    {
                        <option value="@type.Name">@type.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Venue</label>
                <select name="VenueeId" class="form-select">
                    <option value="">-- All Venues --</option>
                    @foreach (var venuee in (List<Venuee>)ViewData["Venues"])
                    {
                        <option value="@venuee.VenueeId">@venuee.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Start Date</label>
                <input type="date" name="startDate" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">End Date</label>
                <input type="date" name="endDate" class="form-control" />
            </div>
        </div>
        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-funnel-fill"></i> Filter
            </button>
            <a href="/Evvent/Index" class="btn btn-outline-secondary">
                Clear
            </a>
        </div>
    </form>

    <!-- Events Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Date)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Venuee)</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@item.Date.ToString("yyyy-MM-dd")</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@item.Venuee?.Location</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
