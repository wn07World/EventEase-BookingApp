 POE_PART_1.Models.Evvent

@{
    @model POE_PART_1.Models.Evvent

<form asp-action="Create" method="post">
    @* Form fields for Evvent model properties *@

    <select asp-for="VenueeId" asp-items="@(new SelectList(ViewData["Venues"] as List<Venuee>, "Id", "Name"))" class="form-control"></select>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h2>Create Event</h2>
        </div>
        <div class="card-body bg-light">
            <h4 class="mb-4 text-secondary">Event Details</h4>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="VenueeId" class="form-label fw-bold"></label>
                    <input asp-for="VenueeId" class="form-control border-primary" />
                    <span asp-validation-for="VenueeId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control border-primary" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Date" class="form-label fw-bold"></label>
                    <input asp-for="Date" type="date" class="form-control border-primary" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control border-primary" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Part question (step 6a): This will allow users to select the event type when creating-->
                <div class="form-group">
                    <label> Evvent Type</label>
                    <select asp-for="EvventTypeId" asp-items="@(new SelectList((IEnumerable<EvventType>)ViewData["EventType"], "EventTypeId", "Name"))" class="form-control">
                        <option value="">-- Select Type --</option>
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div 
            
            class="card-footer text-end bg-white">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
